{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./src/game",
    "paths": {
      "@components/*": ["components/*"]
    }
  },
  "include": [
    "src/game/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
