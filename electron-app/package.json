{
  "name": "dfdata-manager",
  "version": "1.0.0",
  "description": "游戏装备数据管理工具",
  "main": "main.js",
  "homepage": "https://github.com/shuffleman/DFData",
  "repository": {
    "type": "git",
    "url": "https://github.com/shuffleman/DFData.git"
  },
  "author": {
    "name": "DFData Team",
    "email": "dfdata@example.com"
  },
  "scripts": {
    "start": "electron .",
    "build": "npm run build:web && electron-builder",
    "build:web": "cd ../delta-force-loot-simulator && npm run build",
    "build:game": "webpack --config webpack.config.js",
    "watch:game": "webpack --config webpack.config.js --watch",
    "dev": "npm run build:web && electron ."
  },
  "keywords": [
    "electron",
    "game",
    "data",
    "manager"
  ],
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "pixi.js": "^8.9.1",
    "@pixi/text": "^7.4.3"
  },
  "build": {
    "appId": "com.dfdata.manager",
    "productName": "DFData Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "../delta-force-loot-simulator/dist/**/*",
      "!**/*.map",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!src/",
      "!normalized_data/",
      "!tsconfig.json",
      "!webpack.config.js"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "assets/icon.png",
      "maintainer": "DFData Team <dfdata@example.com>"
    }
  }
}
